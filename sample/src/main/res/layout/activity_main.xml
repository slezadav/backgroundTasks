<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button android:text="Task" android:layout_width="wrap_content"
        android:id="@+id/button_task"
        android:layout_height="wrap_content" />

    <Button android:text="Chain" android:layout_width="wrap_content"
        android:id="@+id/button_chain"
        android:layout_height="wrap_content" />

    <Button android:text="Task Service" android:layout_width="wrap_content"
        android:id="@+id/button_task_service"
        android:layout_height="wrap_content" />
    <Button android:text="Task ServiceRemote" android:layout_width="wrap_content"
        android:id="@+id/button_task_service_remote"
        android:layout_height="wrap_content" />

    <Button android:text="Chain Service" android:layout_width="wrap_content"
        android:id="@+id/button_chain_service"
        android:layout_height="wrap_content" />
    <Button android:text="Chain ServiceRemote" android:layout_width="wrap_content"
        android:id="@+id/button_chain_service_remote"
        android:layout_height="wrap_content" />

    <Button android:text="Cancel Task" android:layout_width="wrap_content"
        android:id="@+id/button_cancel_task"
        android:layout_height="wrap_content" />

    <Button android:text="Cancel Chain" android:layout_width="wrap_content"
        android:id="@+id/button_cancel_chain"
        android:layout_height="wrap_content" />




</LinearLayout>
